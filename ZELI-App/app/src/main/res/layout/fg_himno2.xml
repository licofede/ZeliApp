<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colores_fondo_final_2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton3"
                    android:src="@drawable/color_azul"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_azul" />

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton"
                    android:src="@drawable/color_amarillo"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_amarillo" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="   Amarillo-Yellow"
                    android:id="@+id/textView14"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="          Azul-Blue"
                    android:id="@+id/textView15"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/color_cafe"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_cafe" />

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton4"
                    android:src="@drawable/color_blanco"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_blanco" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="      Blanco-White"
                    android:id="@+id/textView16"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#191918"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="     Marron-Brown"
                    android:id="@+id/textView17"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton5"
                    android:src="@drawable/color_rojo"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_rojo" />

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton6"
                    android:src="@drawable/color_negro"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_negro" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="      Negro-Black"
                    android:id="@+id/textView18"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="          Rojo-Red"
                    android:id="@+id/textView19"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton7"
                    android:src="@drawable/color_verde"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_verde" />

                <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/imageButton8"
                    android:src="@drawable/color_rosa"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/rippple_colores"
                    android:onClick="color_rosa" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="         Rosa-Pink"
                    android:id="@+id/textView20"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="       Verde-Green"
                    android:id="@+id/textView21"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="#fcfef6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="23dp" />

    </LinearLayout>
</ScrollView>